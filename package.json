{
	"name": "dv-keyboard",
	"displayName": "Dhivehi Keyboard",
	"description": "Add Windows-style Dhivehi keyboard layout to VSCode",
	"version": "0.0.2",
	"publisher": "remls",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/Remls/dv-keyboard.git"
    },
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
		"Keymaps"
	],
	"keywords": [
		"dhivehi",
		"maldivian",
		"keyboard",
		"input",
		"language",
		"layout"
	],
	"activationEvents": [
        "onStartupFinished"
	],
	"main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "remls.switchInputLanguage",
                "title": "Dhivehi Keyboard: Switch input language"
            }
        ],
		"keybindings": [
			{
				"key": "alt+l",
				"when": "inputFocus",
				"command": "remls.switchInputLanguage"
			}
		],
        "configuration": {
            "title": "Dhivehi Keyboard",
            "properties": {
                "dhivehiKeyboard.defaultInputLanguage": {
                    "type": "string",
                    "default": "en",
                    "enum": [
                        "dv",
                        "en"
                    ],
                    "enumDescriptions": [
                        "Dhivehi",
                        "English"
                    ],
                    "description": "The input language to use by default."
                },
                "dhivehiKeyboard.autoSwitch.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Automatically switch input language to Dhivehi when opening a file based on file contents."
                },
                "dhivehiKeyboard.autoSwitch.threshold": {
                    "type": "number",
                    "default": 50,
                    "minimum": 0,
                    "maximum": 100,
                    "description": "The minimum percentage of Dhivehi characters in a file to automatically switch input language to Dhivehi."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint \"src/**/*.ts\"",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/node": "^16.11.7",
        "@types/vscode": "^1.73.0",
        "@typescript-eslint/eslint-plugin": "^5.42.0",
        "@typescript-eslint/parser": "^5.42.0",
        "eslint": "^8.26.0",
        "typescript": "^4.9.4"
    }
}